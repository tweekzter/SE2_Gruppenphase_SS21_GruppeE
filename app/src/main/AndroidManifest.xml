<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.se2_gruppenphase_ss21">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SE2_Gruppenphase_SS21">

        <activity android:name=".game.Tiles"
            android:theme="@style/Theme.SE2_Gruppenphase_SS21.NoActionBar"/>
        <activity android:name=".game.Dice"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".game.alternative_gui.Puzzle"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".menu.MenuActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".menu.LeaderboardActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".menu.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>