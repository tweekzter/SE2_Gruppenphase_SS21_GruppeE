<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <LinearLayout
        android:id="@+id/frame_roll"
        android:layout_width="2900dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/snake"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginRight="200dp"
            app:srcCompat="@drawable/snake" />

        <ImageView
            android:id="@+id/hand"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginRight="200dp"
            app:srcCompat="@drawable/hand" />

        <ImageView
            android:id="@+id/bug"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginRight="200dp"
            app:srcCompat="@drawable/bug" />

        <ImageView
            android:id="@+id/elephant"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginRight="200dp"
            app:srcCompat="@drawable/elefant" />

        <ImageView
            android:id="@+id/lion"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginRight="200dp"
            app:srcCompat="@drawable/lion"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="271dp" />

        <ImageView
            android:id="@+id/antilope"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/antilope" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="259dp"
        android:layout_height="171dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/frame_roll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/dice_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>